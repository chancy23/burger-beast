<div class="container col-sm-6 main">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Eat Da Burgers!</h1>
            {{!-- <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p> --}}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        {{!-- left column for undevoured burgers --}}
        <div class="col-sm-5" id="allBurgers">
            <h3>Burgers to Eat</h3>
            {{!-- show each burger id and name from our DB with a devoured of false--}}
            {{#each burgers}}
            {{#unless devoured}}
            {{>burgers/burgers-block devoured=false}}
            {{/unless}}
            {{/each}}
        </div>
        {{!-- right column for devoured burgers (devoured is true) --}}
        <div class="col-sm-5" id="devouredBurgers">
            <h3>Devoured Burgers</h3>
            {{#each burgers}}
            {{#if devoured}}
            {{>burgers/burgers-block devoured=true}}
            {{/if}}
            {{/each}}
        </div>
        <div class="col-sm-1"></div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <hr>
            {{!-- to add a burger --}}

            <form class="form-inline center">
                <label class="sr-only" for="inlineFormInputName2"></label>
                <input type="text" class="form-control mb-2 mr-sm-2" id="newBurger" placeholder="Add a Burger">
                <button type="submit" class="btn btn-primary btn-sm mb-2" id="addBurger"><i class="fa fa-plus" style="font-size:26px"></i></button>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>

</div>